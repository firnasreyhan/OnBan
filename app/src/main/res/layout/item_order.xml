<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:gravity="left|top"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginRight="16dp"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_mechanic"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewNamaBengkel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama Bengkel"
                android:layout_marginBottom="3dp"
                android:fontFamily="@font/montserrat_bold"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/textViewJarak"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jarak"
                android:layout_marginBottom="3dp"
                android:fontFamily="@font/montserrat_semibold"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/textViewAlamatBengkel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Alamat"
                android:fontFamily="@font/montserrat_light"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@android:color/black"/>

            <TextView
                android:visibility="gone"
                android:id="@+id/textViewRating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Rating: 5.0"
                android:gravity="right"
                android:fontFamily="@font/montserrat_semibold"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@android:color/black"/>

            <TextView
                android:visibility="gone"
                android:id="@+id/textViewJumlahTransaksi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Transaksi 100 Kali"
                android:gravity="right"
                android:fontFamily="@font/montserrat_semibold"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@android:color/black"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>