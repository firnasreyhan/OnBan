<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@android:color/holo_orange_dark</item>
        <item name="colorControlActivated">@android:color/holo_orange_light</item>
    </style>

    <!-- Firebase application theme. -->
    <style name="FirebaseLoginTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@android:color/black</item>
    </style>

    <style name="FirebaseWhiteLoginTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@android:color/white</item>
    </style>

    <style name="BlackHintStyle" parent="@android:style/TextAppearance">
        <item name="strokeColor">@android:color/black</item>
        <item name="colorControlActivated">@android:color/primary_text_dark</item>
        <item name="colorControlHighlight">@android:color/darker_gray</item>
    </style>

</resources>